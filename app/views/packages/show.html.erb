<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br>
      <div class="media-body">
        <h2 class="media-heading">Package Name: <%= @package.name %></h2>
          <div class="well">
            <%= render partial: 'packages/form', locals: { package: @package } %>
            <p class="js-btn"><%= link_to "Edit package" %> |
             <%= link_to "Delete package", @package, method: :delete, data: { confirm: 'Are you sure you want to delete this package?' } %>
            </p>
          </div>
        </div>
    </div>
  </div>
</div>
