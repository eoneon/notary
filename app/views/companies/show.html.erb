<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br>
      <div class="media-body">
        <h2 class="media-heading">Company Name: <%= @company.name %></h2>
          <div class="well">
            <%= render partial: 'companies/form', locals: { company: @company } %>
            <p class="js-btn"><%= link_to "Edit company" %> |
             <%= link_to "Delete company", @company, method: :delete, data: { confirm: 'Are you sure you want to delete this company?' } %>
            </p>
          </div>
        </div>
    </div>
  </div>
</div>
