<div class="js-form">
  <%= form_for [phoneable, phone] do |f| %>
    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number, class: 'form-control', placeholder: "Enter phone number" %>
    </div>

    <div class="form-group">
      <%= f.label(:phone_type, "Cell") %>
      <%= f.radio_button(:phone_type, "cell", checked: true) %>
      <%= f.label(:phone_type, "Home") %>
      <%= f.radio_button(:phone_type, "home") %>
      <%= f.label(:phone_type, "Work") %>
      <%= f.radio_button(:phone_type, "work") %>
      <%= f.label(:phone_type, "Fax") %>
      <%= f.radio_button(:phone_type, "fax") %>
    </div>
    <%= f.submit "Submit Phone number", class: "btn btn-default pull-right" %>
  <% end %>
</div>
