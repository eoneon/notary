<% emailable.emails.each do |email| %>
  <%= content_tag :div, class: "media", id: "email-#{email.id}" do %>
    <div class="media">
      <div class="well">
        <p><%= email.email %></p>
        <%= render partial: 'emails/form', locals: { emailable: emailable, email: email } %>
        <p class="js-btn"><%= link_to "Edit email!" %> |
           <%= link_to "Delete email", [email.emailable, email], method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this email?' } %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
