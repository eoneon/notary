<% emailable.emails.each do |email| %>
  <%= content_tag :div, class: "media js-emails", id: "email-#{email.id}" do %>
    <div class="media">
      <div class="well">
        <p><%= email.email %></p>
        <p><%= link_to "Edit email", edit_user_email_path(email.emailable, email) %> |
           <%= link_to "Delete email", [email.emailable, email], method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this email?' } %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
