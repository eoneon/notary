<% locatable.locations.each do |location| %>
  <div class="media">
    <div class="well">
      <p><%= location.address %></p>
      <p><%= link_to "Edit address", edit_user_location_path(location.locatable, location) %> |
         <%= link_to "Delete address", [location.locatable, location], method: :delete, data: { confirm: 'Are you sure you want to delete this address?' } %>
      </p>
    </div>
  </div>
<% end %>
