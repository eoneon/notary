<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br>
      <div class="media-body">
        <h2 class="media-heading">Address: <%= @location.address %></h2>
          <div class="well">
            <p><%= link_to "Edit address", edit_location_path([@location.locatable, @location]) %> |
             <%= link_to "Delete address", @location, method: :delete, data: { confirm: 'Are you sure you want to delete this address?' } %>
            </p>
          </div>
        </div>
    </div>
  </div>
</div>
