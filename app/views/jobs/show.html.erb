<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br>
      <div class="media-body">
        <h2 class="media-heading">Jobs for: <%= current_user.full_name %></h2>
          <div class="well">
            <p>Date: <%= @job.job_date %></p>
            <p>Status <%= @job.job_status %></p>
            <p><%= link_to "Edit job", edit_job_path(@job) %> |
               <%= link_to "Delete job", @job, method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this job?' } %>
            </p>
          </div>
          <h4 class="media-heading">Job Location</h4>

          <div>
            <button type="button", class="btn btn-default js-btn">Add address</button>
            <div>
              <%= render partial: 'locations/form', locals: { locatable: @job, location: Location.new } %>
            </div>

            <br>
            <br>

            <div class="js-locations">
              <%= render partial: 'locations/location', locals: {locatable: @job, locations: @job.locations} %>
            </div>
          </div>

          <br>
          <br>

          <h4 class="media-heading">Signers  <%= link_to "Add Signer", new_job_person_path(@job), class: 'btn btn-success' %></h4>
          <div class="media-body">
            <%= render partial: 'people/person', locals: {personable: @job, person: @job.locations} %>
          </div>
      </div>
    </div>
  </div>
</div>
