<div class="js-form">
  <%= form_for [job, line_item] do |f| %>
    <%= f.hidden_field :type, value: line_item.class.to_s %>
    <!-- <div class="form-group">
      <%= f.label(:type, "Loan Package") %>
      <%= f.radio_button(:type, "PackageLineItem") %>
      <%= f.label(:type, "Service") %>
      <%= f.radio_button(:type, "ServiceLineItem") %>
    </div> -->

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.collection_select :itemizable_id, itemizable_list, :id, :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :quantity %><br />
      <%= f.number_field :quantity, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :fee %><br />
      <%= f.number_field :fee, autofocus: true %>
    </div>
    <%= f.submit "Submit line item", class: "btn btn-default pull-right" %>
  <% end %>
</div>
